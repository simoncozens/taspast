<p id="notice"><%= notice %></p>

<h1 class="text-center personname"> <%= @person.name %> </h1>
<h2 class="text-center">
<%if @person.year_of_birth != "?" or @person.year_of_death != "?" %>
          (<%if @person.year_of_birth != "?" %>b. <%= @person.year_of_birth %><% end%><%if @person.year_of_death != "?" %><%if @person.year_of_birth != "?" %>, <%end%>d. <%= @person.year_of_death %><% end%>)
<% end %>
</h2>
<div class="container">
<%= render partial: "person" %>
</div>

<% if @person.ambiguous %>
<div class="container bigskip">
<div class="panel panel-default">
<div class="panel-heading">
The following details may also apply to <em>"<%= @person.name %>"</em>:
</div>
<div class="panel-body">
<div class="container">
<% @person = @person.ambiguous %>
<%= render partial: "person" %>
</div>
</div>
<div class="panel-footer">
Find other people called <%= personlink(@person.name) %>.
</div>
</div>
<% end %>
